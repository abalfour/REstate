{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "{host}/connectors/chrono",
    "type": "object",
    "format": "normal",
    "additionalProperties": false,
    "defaultProperties": [
        "name",
        "delay",
        "payload"
    ],
    "properties": {
        "name": {
            "id": "{host}/connectors/chrono/trigger-name",
            "type": "string",
            "name": "TriggerName",
            "title": "Trigger Name",
            "default": null
        },
        "delay": {
            "id": "{host}/connectors/chrono/delay",
            "name": "Delay",
            "title": "Delay Period (seconds)",
            "type": "integer",
            "default": 30
        },
        "payload": {
            "id": "{host}/connectors/chrono/payload",
            "type": "string",
            "name": "Payload",
            "title": "Payload",
            "default": null,
            "format": "code",
            "options": {
                "input_height": "100px",
                "format": "text"
            }
        }
    },
    "required": [
        "name",
        "delay"
    ]
}