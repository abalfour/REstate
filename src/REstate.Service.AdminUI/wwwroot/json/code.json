{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "{host}/code",
    "type": "object",
    "default": null,
    "format": "normal",
    "options": {
        "disable_edit_json": true
    },
    "additionalProperties": false,
    "defaultProperties": [
        "name",
        "connectorKey",
        "body",
        "description"
    ],
    "properties": {
        "name": {
            "id": "{host}/code/name",
            "type": "string",
            "name": "Name",
            "title": "Name",
            "default": null
        },
        "connectorKey": {
            "id": "{host}/code/connector-key",
            "type": "string",
            "name": "ConnectorKey",
            "title": "Connector Key",
            "default": null
        },
        "body": {
            "id": "{host}/code/body",
            "type": "string",
            "name": "Body",
            "title": "Body",
            "format": "code",
            "options": {
                "input_height": "100px",
                "format": "text"
            }
        },
        "options": {
            "id": "{host}/code/options",
            "type": "object",
            "name": "Options",
            "title": "Options",
            "default": null
        },
        "description": {
            "id": "{host}/code/description",
            "type": "string",
            "name": "Description",
            "title": "Description",
            "format": "textarea",
            "default": null,
            "options": {
                "input_height": "100px"
            }
        }
    },
    "required": [
        "name",
        "connectorKey",
        "body"
    ]
}